{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "preserveConstEnums": true,
    "suppressImplicitAnyIndexErrors": true,
    "strict": true,
    "noImplicitAny": true,
    "sourceMap": true,
    "outDir": "./dist/",
    "jsx": "react"
  },
  "awesomeTypescriptLoaderOptions": {
    "useWebpackText": true,
    "forkChecker": true,
    "useCache": true
  },
  "exclude": [
    "node_modules",
    "lib"
  ],
  "compileOnSave": true,
  "buildOnSave": false,
  "include": [
    "./src/**/*"
  ]
}